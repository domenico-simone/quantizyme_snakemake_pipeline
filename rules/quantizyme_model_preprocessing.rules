    threads: 20
    log:
        #expand("logs/quantizyme_model_MSA/{projectID}_filtering_{{remove_lower_t}}_{{remove_higher_t}}.log", projectID=projectID)
        expand("logs/quantizyme_model_MSA/{projectID}_filtering_{remove_lower_t}_{remove_higher_t}.log", projectID=projectID, remove_lower_t=remove_lower_t, remove_higher_t=remove_higher_t)
